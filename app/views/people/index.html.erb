
<div class="container ">
    <div class="row">
      <% if user_signed_in?%>
        <%= link_to 'Cadastrar novo membro', new_person_path, class: "btn btn-primary" %>
      <% end %>
    </div>
    <br>

            <div class="row">
                <% @people.each do |person| %>
                    <div class="col-md-3 center">
                        <% if File.file?("#{Rails.root}/app/assets/images/membros/#{person.imagem}") %> 
                            <%= image_tag("membros/#{person.imagem}", :alt => "rss feed",  width: "120px", height: "120px", class: "rounded-circle") %> <br>
                        <% else %>
                            <%= image_tag("membros/avatar.png", :alt => "rss feed",  width: "120px", height: "120px", class: "rounded-circle") %> <br>
                        <% end %>
                        <td><%= person.funcao %></td><br>
                        <%= person.nome %><br>
                        <%= person.titulacao %> <br>
                        <td><%= link_to 'Lattes', person.lattes, target: "_blank" %> <br>
                        
                        <% if user_signed_in?%>
                        <%= link_to 'Show', person %><br>
                            <%= link_to 'Editar', edit_person_path(person) %><br>
                            <%= link_to 'Remover', person, method: :delete, data: { confirm: 'Are you sure?' } %><br>
                        <% end %>
                    </div>
                <% end %>
            </div>
    
  </div>
<br>
</div>
