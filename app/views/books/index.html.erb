<html>
<head>
	<meta charset="UTF-8">
	<title>GPDS</title>
</head>
<body>
	<%= render partial: "/layouts/menu" %>

<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Resumo</th>
      <th>Paginas</th>
      <th>Tipo</th>
      <th>Idioma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.titulo %></td>
        <td><%= book.resumo %></td>
        <td><%= book.paginas %></td>
        <td><%= book.tipo %></td>
        <td><%= book.idioma %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
</body>
</html>