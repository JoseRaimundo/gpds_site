

<div class="container">
    <% if user_signed_in?%>
        <%= link_to 'Cadastar novo trabalho', new_book_path %>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Publicado em:</th>
          <th>Paginas</th>
          <th>Tipo</th>
          <th>Idioma</th>
          <th>Autores</th>
          <th>Resumo</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.titulo %></td>
            <td><%= book.event.nome %></td>
            <td><%= book.paginas %></td>
            <td><%= book.tipo %></td>
            <td><%= book.idioma %></td>
            <td>
              <% book.people.each do |p| %>
                <%= p.nome %>,
              <% end %>
            </td> 
            <td><%= link_to 'Resumo', book %></td>



            <% if user_signed_in?%>
                <td><%= link_to 'Edit', edit_book_path(book) %></td>
                <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr> 
        <% end %>
      </tbody>
    </table>
    <%= paginate(@books) %>
    <br>
</div>
